@model eProjects.Models.ManageViewModels.AddResourceViewModel

@{
    ViewData["Title"] = "AddResource";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddResource">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fullname" class="control-label"></label>
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceType" class="control-label"></label>
                <select asp-for="ResourceType" class="form-control" asp-items="@ViewBag.Options">
                    <option disabled selected>-----SELECT-----</option>
                </select>
                <span asp-validation-for="ResourceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
